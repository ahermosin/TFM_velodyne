[X,Y] = meshgrid(-1:.005:1);
thetalim = 10;
Z = sqrt(X.^2 + Y.^2)/tand(thetalim);

% figure(1)
% s1 = surf(X,Y,Z,'FaceAlpha',0.4, 'EdgeColor', 'none', 'FaceColor', 'r', 'FaceLighting', 'flat');
% axis equal
% zlim([-1 1])
% light('Position',[-5 0 0],'Style','infinite')
% 
% N = 200;
% thetavec = linspace(0,pi,N);
% phivec = linspace(0,2*pi,2*N);
% [th, ph] = meshgrid(thetavec,phivec);
% R = ones(size(th)); % should be your R(theta,phi) surface in general
% 
% x = R.*sin(th).*cos(ph);
% y = R.*sin(th).*sin(ph);
% z = R.*cos(th);
% 
% figure(2)
% s2 = surf(x,y,z, 'FaceAlpha', 0.4, 'EdgeColor', 'none', 'FaceColor', 'b', 'FaceLighting', 'flat');
% axis equal
% zlim([-1 1])
% light('Position',[-5 0 0],'Style','infinite')
% 
% 
% figure(3)
% [X,Y] = meshgrid(-1:.005:1);
% thetalim = 10;
% Z = sqrt(X.^2 + Y.^2)/tand(thetalim);
% 
% s1 = surf(X,Y,Z,'FaceAlpha',0.4, 'EdgeColor', 'none', 'FaceColor', 'r', 'FaceLighting', 'flat');
% hold on
% 
% N = 200;
% thetavec = linspace(0,pi,N);
% phivec = linspace(0,2*pi,2*N);
% [th, ph] = meshgrid(thetavec,phivec);
% R = ones(size(th)); % should be your R(theta,phi) surface in general
% x = R.*sin(th).*cos(ph);
% y = R.*sin(th).*sin(ph);
% z = R.*cos(th);
% 
% s2 = surf(x,y,z, 'FaceAlpha', 0.4, 'EdgeColor', 'none', 'FaceColor', 'b', 'FaceLighting', 'flat');
% axis equal
% zlim([-1 2])
% light('Position',[-5 0 0],'Style','infinite')

figure(4)
N = 200;
thetavec = linspace(0,pi,N);
phivec = linspace(0,pi,2*N);
[th, ph] = meshgrid(thetavec,phivec);
R = ones(size(th)); % should be your R(theta,phi) surface in general
x = R.*sin(th).*cos(ph);
y = R.*sin(th).*sin(ph);
z = R.*cos(th);

s2 = surf(x,y,z, 'FaceAlpha', 0.4, 'EdgeColor', 'none', 'FaceColor', 'c', 'FaceLighting', 'flat');
axis equal
zlim([-1 2])
light('Position',[-5 0 0],'Style','infinite')

